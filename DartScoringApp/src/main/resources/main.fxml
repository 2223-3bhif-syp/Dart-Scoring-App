<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="at.htl.dart.controller.GameController"
      alignment="CENTER"
      spacing="10">

    <Label text="Spieler 1" />
    <HBox spacing="5">
        <Label text="Name:" />
        <TextField fx:id="player1NameField" />
    </HBox>

    <Label text="Spieler 2" />
    <HBox spacing="5">
        <Label text="Name:" />
        <TextField fx:id="player2NameField" />
    </HBox>

    <Label text="Punktestand" />
    <HBox spacing="5">
        <Label text="Startwert:" />
        <TextField fx:id="startingScoreField" />
    </HBox>

    <Button text="Spiel starten" onAction="#startGame" />

</VBox>



